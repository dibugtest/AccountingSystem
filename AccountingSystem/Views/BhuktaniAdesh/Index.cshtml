@model IEnumerable<AccountingSystem.Models.bhuktaniAdesh>

@{
    ViewBag.Title = "Index Bhuktani Adesh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h2 class="text-center">भुक्तानी आदेशको विवरण</h2>
    @using (Html.BeginForm())
    {
        if (ViewBag.ErrorMessage != null)
        { 
            <div class="col-md-12 text-center"><div class="alert alert-danger">@ViewBag.ErrorMessage</div> </div>
        }
    <div class="col-md-3">
        <div class="form-group">
            <label>आ.ब.</label>
            @Html.DropDownList("fyId", null, new { @class = "form-control", id = "ddlFyId" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>महिना</label>
            @Html.DropDownList("mn", EnumHelper.GetSelectList(typeof(AccountingSystem.Models.month)), new { @class = "form-control", id = "txtMonth" })
        </div>
    </div>
   
    <div class="col-md-3 text-center" style="padding-top:20px;">
        <input type="submit" value="Select" class="btn btn-primary" id="btnSubmit" />
    </div>
    }
    <br />
<table class="table table-bordered table-responsive" >
    <tr>
        <th>
         ब.उ.शि.नं. 
        </th>
        <th>
            वर्ष 
        </th>
        <th>
            महिना
        </th>
        <th>
            मिति
        </th>
        <th>
          भुक्तानी आदेश नं. 
        </th>
        <th>
            विवरण
        </th>
        <th>गो.भौ.नं.</th>
        <th>
            ख.शि.नं
        </th>
        <th>
          रकम  
        </th>
        <th>
          पाउनेको नाम 
        </th>
        <th>
         पाउनेको कोड   
        </th>
        <th>
          कैफियत 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.baUSiNa.baUSiNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.month)
        </td>
        <td>
           @item.nepDate.ToString("yyyy-MM-dd")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bhuktaniAdeshNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bibaran)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.jornalNikasiNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.khaSiNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rakam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pauneKoNaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pauneKoCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reamrks)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.bhuktaniAdeshId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.bhuktaniAdeshId }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.bhuktaniAdeshId }, new { onclick = "return confirm('तलबी भुक्तानी आदेश " + item.bhuktaniAdeshNo + " मा भएका सम्पूर्ण विवरण हटाउन चाहनुहुन्छ?');" })
        </td>
    </tr>
}

</table>
