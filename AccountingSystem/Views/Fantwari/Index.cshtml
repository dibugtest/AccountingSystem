@model IEnumerable<AccountingSystem.Models.fantwariKharcha>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h2 class="text-center">खर्चको फाँटवारिको विवरण </h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <div class="form-group">
                <label>वर्ष</label>
                @Html.TextBox("year", "", new { @class = "form-control", id = "txtYear", @data_val = "true", @data_val_required = "Year is Required" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>महिना</label>
                @Html.DropDownList("month", EnumHelper.GetSelectList(typeof(AccountingSystem.Models.month)), new { @class = "form-control", id = "txtMonth" })
            </div>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-12 text-center"><input type="submit" value="Select" class="btn btn-primary" /></div>
    }
<table class="table table-bordered table-responsive">
    <tr>
        <th>
         ब.उ.शि.नं.
        </th>
        <th>
            वर्ष
        </th>
        <th>
            महिना
        </th>
        <th>
            मिति
        </th>
        <th>
            नेपाली आ.ब.
        </th>
        <th>
          यस महिनाको खर्च
        </th>
        <th>
         यस महिना सम्मको खर्च
        </th>
        <th>
           ख.शि.नं.
        </th>
        <th>
          खर्च शिर्षक
        </th>
        <th>
          बजेट रकम
        </th>
        <th>
           बाँकी बजेट
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.baUSiNa.baUSirsak)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.month)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nepDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nepFy)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.kharchaThisMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kharchaTillMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.khaSiNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.khaSirsak)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yearlyBudget)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.remainingBudget)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.fantwariId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.fantwariId })
        </td>
    </tr>
}

</table>

<div class="col-md-12 text-center">
    @Html.ActionLink("Create New", "Fantwari", null, new { @class = "btn btn-primary" })
</div>
</div>