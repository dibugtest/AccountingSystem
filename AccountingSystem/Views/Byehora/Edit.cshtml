@model AccountingSystem.Models.byehora

@{
    ViewBag.Title = "Edit Byehora";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h2 class="text-center">सम्बन्धित व्यहोराको विवरण परिवर्तन गर्नुहोस</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.byehoraId)
    <div class="col-md-4">
        <div class="form-group">
            <label>व्यहोरा</label>
                @Html.TextBoxFor(model => model.byehoraName, new {@class="form-control" ,id="txtByehoraName"})
                @Html.ValidationMessageFor(model => model.byehoraName)
            </div>
        </div>
     <div class="col-md-4">
        <div class="form-group">
            <label>हिसाब नं.</label>
                @Html.TextBoxFor(model => model.hisabNo, new {@class="form-control",id="txtHisabNo" })
                @Html.ValidationMessageFor(model => model.hisabNo)
            </div>
        </div>
       <div class="col-md-4">
        <div class="form-group">
         <label>कैफियत</label>
                @Html.TextBoxFor(model => model.remarks, new {@class="form-control" ,id="txtRemarks"})
                @Html.ValidationMessageFor(model => model.remarks)
            </div>
        </div>
        @Html.HiddenFor(model=>model.khaSiNaId)
       
            <div class="col-md-12 text-center" >
                <input type="submit" value="Save" class="btn btn-primary" /> @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-default" })
       
    </div>
}

</div>
@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery.ui")
    @Styles.Render("~/Content/css/jquery.ui")
    @Scripts.Render("~/bundles/nepDate")
    <script src="~/Scripts/NepaliUnicode.js"></script>
    <script src="~/Transliteration/jsapi.js"></script>

    <script language="javascript">
        $(document).ready(function () {


            var ele1 = $("#txtByehoraName");
            var ele2 = $("#txtHisabNo");
            var ele3 = $("#txtRemarks");
            AddUnicode(ele1);
            AddUnicode(ele2);
            AddUnicode(ele3);
        });
       
    </script>
    <script src="~/Transliteration/transliteration.js"></script>
    <link href="~/Transliteration/transliteration.css" rel="stylesheet" />
    <script src="~/Transliteration/transliteration.I.js"></script>
    }
