@model IEnumerable<AccountingSystem.Models.budget>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h2 class="text-center">बजेट सम्बन्धि विवरण</h2>

    <table class="table table-bordered table-responsive">
        <tr>
            <th>
                ख.शि.नं.
            </th>
            <th>
                बजेट रकम
            </th>
            <th>
                नेपाली आ.ब.
            </th>
            <th>
                अंग्रेजी आ.ब.
            </th>
            <th>
                कैफियत
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.khaSiNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.budgetAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nepFy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.enFy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.remarks)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.budgetId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.budgetId })
                </td>
            </tr>
        }

    </table>

    <div class="col-md-12 text-center">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>