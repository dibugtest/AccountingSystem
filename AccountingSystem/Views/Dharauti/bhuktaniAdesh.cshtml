        if (TempData["ErrorMessage"] != null || ViewBag.ErrorMessage != null)
        {<div class="col-md-12">
             <div class="col-md-4 col-md-offset-4" >
                 <div class="alert alert-danger">
                     @TempData["ErrorMessage"]
                     @ViewBag.ErrorMessage
                 </div>
             </div>
        </div>
        }
        <div class="col-md-4"></div>
        <div class="col-md-4">
            @*<div class="col-md-12">
                    <div class="form-group">
                        <label>आ.ब.</label>
                        @if (ViewBag.bhuktaniAdeshNo != null)
                        {
                            @Html.DropDownList("bhuktaniAdeshNo", new SelectList(ViewBag.bhuktaniAdeshNo, "value", "text"), new { @class = "form-control", id = "ddlBhuktaniAdeshNo" })
                        }
                        else
                        {
                            @Html.DropDownList("bhuktaniAdeshNo", new List<SelectListItem> { new SelectListItem { Text = "छान्नुहोस्", Value = "" } }, new { @class = "form-control", id = "ddlBhuktaniAdeshNo" })
