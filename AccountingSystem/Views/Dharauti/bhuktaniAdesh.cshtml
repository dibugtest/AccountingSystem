            <div class="col-md-12">
                <div class="form-group">
                    <label>भुक्तानी आदेश नं. </label>
                    @if (ViewBag.bhuktaniAdeshNo != null)
                    {
                        @Html.DropDownList("bhuktaniAdeshNo", new SelectList(ViewBag.bhuktaniAdeshNo, "text", "value"), new { @class = "form-control", id = "ddlBhuktaniAdeshNo" })
                    }
                    else
                    {
                        @Html.DropDownList("bhuktaniAdeshNo", new List<SelectListItem> { new SelectListItem { Text = "छान्नुहोस्", Value = "" } }, new { @class = "form-control", id = "ddlBhuktaniAdeshNo" })
                    }
                </div>
            </div>
        </div>

        <div class="col-md-12 text-center">
            <input type="submit" value="Submit" id="btnSubmit" class="btn btn-primary" />
        </div>
        <div class="col-md-4"></div>
    }
</div>
<script>
    $(document).ready(function () {
        $("#btnSubmit").click(function (e) {
            if ($("#ddlBhuktaniAdeshNo").val() == 0 || $("#ddlBhuktaniAdeshNo").val() == null) {
                alert("Please Select one option from dropdown list to submit");
                e.preventDefault();
            }
        });

    });
</script>