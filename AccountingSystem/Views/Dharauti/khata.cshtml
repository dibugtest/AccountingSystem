@{
    ViewBag.Title = "Dharauti Khata";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h2 class="text-center">व्यक्तिगत धरौटी खाताको लागि वर्ष र महिना छान्नुहोस्</h2>
    @using (Html.BeginForm("DharautiKhata", "Dharauti", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.ValidationSummary()
        if (TempData["ErrorMessage"] != null)
        {
           <div class="col-md-4 col-md-offset-4" >
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        </div>
        }
      
        <div class="col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>आ.ब.</label>@Html.ValidationMessage("year")
                    @Html.DropDownList("fyId",null, new { @class = "form-control", id = "ddlFyId" })
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>महिना</label>
                    @Html.DropDownList("mn", EnumHelper.GetSelectList(typeof(AccountingSystem.Models.month)), new { @class = "form-control", id = "txtMonth" })
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <input type="submit" value="Submit" class="btn btn-primary" id="btnSubmit"/>
            </div>
            <div class="col-md-4"></div>
        </div>
    }
</div>  
@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery.ui")
    @Styles.Render("~/Content/css/jquery.ui")
}
