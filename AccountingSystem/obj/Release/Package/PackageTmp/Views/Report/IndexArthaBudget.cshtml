@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h2 class="text-center">अर्थ बजेटको लागि वर्ष महिना छान्नुहोस्</h2>
    @using (Html.BeginForm("reportarthabudget", "Report", FormMethod.Get))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.ValidationSummary()
        if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>वर्ष</label>@Html.ValidationMessage("year")
                    @Html.DropDownList("year", new SelectList(ViewBag.year, "value", "text"), new { @class = "form-control", id = "txtYear",@data_val="true",@data_val_required="Year is Required" })
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>महिना</label><label id="ValMonth"></label>
                    @Html.DropDownList("mn", new SelectList(ViewBag.month, "value", "text"), new { @class = "form-control", id = "txtMonth", @data_val = "true", @data_val_required = "Month is Required" })
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="colmd-12">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            <div class="col-md-4"></div>
        </div>
    }
</div> 
 @section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery.ui")
    @Styles.Render("~/Content/css/jquery.ui")
    <script src="~/Scripts/NepaliUnicode.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var ele1 = $("#txtYear");
            AddUnicode(ele1);
        });
    </script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script src="https://www.google.com/uds/?file=elements&amp;v=1&amp;packages=transliteration" type="text/javascript"></script>
    <link href="https://www.google.com/uds/api/elements/1.0/7ded0ef8ee68924d96a6f6b19df266a8/transliteration.css" type="text/css" rel="stylesheet">
    <script src="https://www.google.com/uds/api/elements/1.0/7ded0ef8ee68924d96a6f6b19df266a8/transliteration.I.js" type="text/javascript"></script>

}
