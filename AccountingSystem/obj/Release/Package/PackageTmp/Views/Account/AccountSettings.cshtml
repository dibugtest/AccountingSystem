@model AccountingSystem.Models.AccountSettingsViewModel

<div class="row">
    <h2 class="text-center">Account Settings</h2>
    <p class="text-danger">@ViewBag.ErrorMessage</p>
    @using (Html.BeginForm("AccountSettings", "Account", FormMethod.Post, new {role = "form" }))
    { 
        <div class="col-md-4"></div>
        @Html.AntiForgeryToken()
        if ((bool)ViewBag.showForm)
        {
            
        <div class="col-md-4">
            <div class="form-group">
               <label>Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control",id="txtEmail" })
                </div>
            

            <div class="form-group">
               <label>UserName</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control",id="txtUserName" })
            </div>

            <div class="form-group">
                <label>Mobile No</label>
                    @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" ,id="txtMobile"})
            </div>
                <div class="col-md-12 text-center">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>
        }
        else
        {
            <div class="col-md-4">
                <div class="alert alert-success">@ViewBag.StatusMessage</div>
            </div>
        }
          <div class="col-md-4"></div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


