@model IEnumerable<AccountingSystem.Models.khaShrot>

@{
    ViewBag.Title = "Index KharchaShrot";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <h2 class="text-center">दर्ता भएका खर्च श्रोतहरुको विवरण</h2>
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <table class="table table-bordered table-responsive">
            <tr>
                <th>
                   खर्च श्रोत
                </th>
                <th>
                   कैफियत
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.sourceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.remarks)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.sourceId }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.sourceId }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.sourceId })
                    </td>
                </tr>
            }

        </table>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-12 text-center">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>
