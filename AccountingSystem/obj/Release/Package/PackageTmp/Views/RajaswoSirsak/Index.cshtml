@model IEnumerable<AccountingSystem.Models.rajaswoSirsak>

@{
    ViewBag.Title = "Index RajaswoSirsak";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h2 class="text-center">राजश्व शिर्षक सम्बन्धि विवरण</h2>
    <div class="col-md-3"></div>
    <div class="col-md-6 text-center">
        <table class="table table-bordered table-responsive">
            <tr>
                <th>
                    राजश्व शिर्षक
                </th>
                <th>
                    राजश्व शिर्षक नं.
                </th>
                <th>
                    कैफियत
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.sirsak)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sirsakNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.remarks)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.rsId }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.rsId }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.rsId })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-12 text-center">
        @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-primary" })
    </div>
</div>